    <style name="SwipeDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/black</item>
        <item name="colorPrimary">@color/JadeGray</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:topBright">@color/JadeGray</item>
    </style>

    <style name="olMEGAtheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="backgroundTint">@color/Canvas</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/olMEGATransition</item>
    </style>

    <style name="olMEGATransition">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>



